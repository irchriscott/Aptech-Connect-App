<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StudentActivity">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.497"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:background="@drawable/round_button"
                android:src="@drawable/ic_add_a_photo_black_24dp"
                android:id="@+id/editPicture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                android:layout_marginTop="116dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image"
                android:layout_marginTop="10dp"
                android:text="Scott"
                android:id="@+id/name"
                android:textSize="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:text="Scott"
                android:id="@+id/email"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/rollIcon"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintStart_toEndOf="@id/rollIcon"
                android:id="@+id/roll_no"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/rollIcon"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/batchIcon"
                android:src="@drawable/ic_people_black_24dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/rollIcon"
                app:layout_constraintStart_toEndOf="@id/batchIcon"
                android:id="@+id/batch_no"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/batchIcon"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/locationIcon"
                android:src="@drawable/ic_place_black_24dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/batchIcon"
                app:layout_constraintStart_toEndOf="@id/locationIcon"
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/locationIcon"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/branchIcon"
                android:src="@drawable/ic_school_black_24dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/locationIcon"
                app:layout_constraintStart_toEndOf="@id/branchIcon"
                android:id="@+id/branch"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/branchIcon"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/dobIcon"
                android:src="@drawable/ic_event_black_24dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/branchIcon"
                app:layout_constraintStart_toEndOf="@id/dobIcon"
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/dobIcon"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/genderIcon"
                android:src="@drawable/ic_sentiment_satisfied_black_24dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/dobIcon"
                app:layout_constraintStart_toEndOf="@id/genderIcon"
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:background="@drawable/round_button"
                android:src="@drawable/ic_forum_white_24dp"
                android:id="@+id/openChat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gender"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>